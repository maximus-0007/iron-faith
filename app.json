{
  "expo": {
    "name": "Iron Faith",
    "slug": "iron-faith",
    "version": "1.3.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "ironfaith",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "primaryColor": "#2563EB",
    "backgroundColor": "#2563EB",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563EB"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ironfaith.app",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "Iron Faith uses your camera to capture images for sharing.",
        "NSPhotoLibraryUsageDescription": "Iron Faith accesses your photo library to select images.",
        "NSPhotoLibraryAddUsageDescription": "Iron Faith saves exported conversations and images to your photo library.",
        "NSMicrophoneUsageDescription": "Iron Faith uses your microphone for voice input to ask questions hands-free.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "privacyManifests": {
        "NSPrivacyAccessedAPITypes": [
          {
            "NSPrivacyAccessedAPIType": "NSPrivacyAccessedAPICategoryUserDefaults",
            "NSPrivacyAccessedAPITypeReasons": [
              "CA92.1"
            ]
          }
        ]
      }
    },
    "android": {
      "package": "com.ironfaith.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#2563EB"
      },
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      [
        "expo-av",
        {
          "microphonePermission": "Iron Faith uses your microphone for voice input to ask questions hands-free."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Iron Faith uses your camera to capture images for sharing."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "5a40aea1-4ba5-470e-8e1b-38fb8abbf97c"
      },
      "router": {}
    },
    "owner": "maxneff"
  }
}
